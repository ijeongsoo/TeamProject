package com.IBK.study01;

public class Product {
	int pcode;
	String pname;
	int price;
	int quant;
	String pdesc = "";
	
	public void info(){
		String msg = pcode +"\t| "+ pname+ "\t|"+price+"\t|"+quant+"\t|"+pdesc;
		System.out.println(msg);
		
	}
	
	public void getPrice(){
		System.out.println(price);
	}

}
