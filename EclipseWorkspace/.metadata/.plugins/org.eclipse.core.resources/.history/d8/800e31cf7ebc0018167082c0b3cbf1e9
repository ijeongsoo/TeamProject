package com.IBK.study03.project2;

import java.util.ArrayList;
import java.util.Iterator;

import com.IBK.study02.project.Book;

public class ArrayManager implements IManager {
	private ArrayList<Book> books;
	public ArrayManager() {
		// TODO Auto-generated constructor stub
		books = new ArrayList();
	}
	
	@Override
	public void add(Book b) {
		// TODO Auto-generated method stub
		books.add(b);
		
	}

	@Override
	public int update(Book b) {
		// TODO Auto-generated method stub
		Iterator<Book> it = books.iterator();
		
		while(it.hasNext()){
			Book temp = (Book)it.next();
			System.out.println(temp.getIsbn());
			System.out.println(b.getIsbn());
			if(temp.getIsbn().equals(b.getIsbn())){
				int index = books.indexOf(temp);
				System.out.println(index);
				books.set(index, b);
				return 1;
			}
		}
		return 0;
	}

	@Override
	public void delete(int isbn) {
		// TODO Auto-generated method stub
		Iterator it = books.iterator();
		
		if(it.hasNext()){
			Book temp = (Book)it.next();
			if(temp.getIsbn().equals(isbn)){
				books.remove(temp);			
			}
		}
	}


	@Override
	public ArrayList selectToAll() {
		// TODO Auto-generated method stub
		
		return books;
	}

	@Override
	public Book select(String title) {
		// TODO Auto-generated method stub
		return null;
	}

}
