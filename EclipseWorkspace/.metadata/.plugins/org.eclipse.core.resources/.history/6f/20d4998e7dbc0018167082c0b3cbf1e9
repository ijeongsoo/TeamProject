package com.IBK.study03.project2;

import java.util.ArrayList;
import java.util.Iterator;

import com.IBK.study02.project.Book;

public class ArrayManager implements IManager {
	private ArrayList books;
	public ArrayManager() {
		// TODO Auto-generated constructor stub
		books = new ArrayList();
	}
	
	@Override
	public void add(Book b) {
		// TODO Auto-generated method stub
		books.add(b);
		
	}

	@Override
	public int update(Book b) {
		// TODO Auto-generated method stub
		boolean flag =false;
		Iterator it = books.iterator();
		
		if(it.hasNext()){
			Book temp = (Book)it.next();
			if(temp.getIsbn().equals(b.getIsbn())){
				int index = books.indexOf(temp);
				books.add(index, b);
				books.remove(index+1);
				return 1;
			}
		}
		return 0;
	}

	@Override
	public void delete(int isbn) {
		// TODO Auto-generated method stub
		Iterator it = books.iterator();
		
		if(it.hasNext()){
			Book temp = (Book)it.next();
			if(temp.getIsbn().equals(isbn)){
				books.remove(temp);			
			}
		}
	}

	@Override
	public Book select(String title) {
		// TODO Auto-generated method stub
		for(int i=0; i<10; i++){
			if(books[i]!=null && books[i].getTitle().equals(title)){
				return books[i];
			}
		}
		System.out.println("검색된 내용이 없습니다.");
		return null;
		
	}

	@Override
	public ArrayList selectToAll() {
		// TODO Auto-generated method stub
		
		return books;
	}

}
