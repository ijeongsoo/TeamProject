package com.IBK.study03.project2;

import java.util.ArrayList;

import com.IBK.study02.project.Book;

public class MainTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Book book = new Book("1", "이정수책", "이정수", "이정수출판사", 100, "이정수 책입니다.");
		Book book2 = new Book("2", "이정수책2", "이정수", "이정수출판사", 100, "이정수 책입니다.");
		Book book3 = new Book("3", "이정수책2(수정)", "이정수", "이정수출판사", 100, "이정수 책입니다.");

		IManager man = new ArrayManager();
		
		man.add(book);
		man.add(book2);
		
		ArrayList bookArr= man.selectToAll();
		for(int i=0; i<bookArr.size(); i++){
			if(bookArr.get(i) == null){
				break;
			}else{
				System.out.println(bookArr.get(i).toString());
				
			}
		}
		
		man.update(book3);
		
		bookArr= man.selectToAll();
		for(int i=0; i<bookArr.length; i++){
			if(bookArr[i] == null){
				break;
			}else{
				System.out.println(bookArr[i].toString());
				
			}
		}
		
		
	
	}

}
