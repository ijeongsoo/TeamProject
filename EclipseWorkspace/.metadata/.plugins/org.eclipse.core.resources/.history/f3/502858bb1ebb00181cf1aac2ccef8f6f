package com.IBK.study02.project;

import java.util.ArrayList;
import java.util.Scanner;

public class MainTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		String select;
		ArrayList<Magazine> arr = new ArrayList<>();
		
		System.out.println("도서 관리 프로그램 실행");
		while(true){
			System.out.println("원하시는 기능을 선택하세요 : ");
			System.out.println("1 : 도서 출력");
			System.out.println("2 : 도서 입력");
			
			System.out.print("입력 > ");
			
			select = sc.nextLine();
			if(select.equals("q")||select.equals("Q")){
				break;
			}
			
			if(select.equals("1")){
				for(int i=0; i<arr.size(); i++){
					if(arr.get(i) instanceof Magazine){
						((Magazine)arr.get(i)).toString();
					}else{
						arr.get(i).toString();
					}
					
				}
			}else if(select.equals("2")){
				String
				arr.add(new Magazine());
			}else{
				System.out.println("올바른 번호를 입력하세요.");
			}
		}
		

	}

}
